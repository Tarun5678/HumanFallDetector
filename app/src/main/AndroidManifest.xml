<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.falldetector">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.TELEPHONY_MANAGER" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".OfflineMode"
            android:label="@string/title_activity_offline_mode"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".HaveAccount"
            android:label="@string/title_activity_have_account"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Monitoring"
            android:label="@string/title_activity_monitoring"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EmergencyContact"
            android:label="@string/title_activity_emergency_contact"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>